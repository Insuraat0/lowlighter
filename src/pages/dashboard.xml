<!DOCTYPE html PUBLIC
    "-//W3C//DTD XHTML 1.1//EN"
    "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Dashboard â€” Lowlighter</title>
        <link rel="stylesheet" type="text/css" href="dashboard.css" />
        <link rel="stylesheet" type="text/css" href="dashboard-light-noborder.css" />
    </head>
    <body>
        <div id="sidemenu" />
        <div id="center">
            <div id="scroll">
                <div id="main">
                    <div id="sortmenu">
                        <div id="minilist-sorting">
                            <select id="separate-minilists-by">
                                <option>Page</option>
                                <option>Date updated</option>
                                <option>Page and date</option>
                                <option>Website</option>
                                <option>Website and date</option>
                                <option>Do not separate</option>
                            </select>
                            <select id="sort-minilists-by">
                                <option value="url">URL (A to Z)</option>
                                <option value="url,1">URL (Z to A)</option>
                                <option value="updated">Updated (old to new)</option>
                                <option value="updated,1">Updated (new to old)</option>
                                <option value="created">Created (old to new)</option>
                                <option value="created,1">Created (new to old)</option>
                                <option value="title">Title (A to Z)</option>
                                <option value="title,1">Title (Z to A)</option>
                                <option value="highlights,1">Highlights (9 to 1)</option>
                                <option value="highlights">Highlights (1 to 9)</option>
                            </select>
                            <select id="sort-entries-by">
                                <option value="createOrder">Creation (old to new)</option>
                                <option value="createOrder,1">Creation (new to old)</option>
                                <option value="pageOrder">Original page (top to bottom)</option>
                                <option value="pageOrder,1">Original page (bottom to top)</option>
                                <option value="textContent">Alphabetical (A to Z)</option>
                                <option value="textContent,1">Alphabetical (Z to A)</option>
                            </select>
                        </div>
                        <div id="searchbar-row">
                            <div id="searchbar">
                                <input type="text" />
                            </div>
                            <div id="search-button">Search</div>
                            <div id="advanced-toggle">Advanced</div>
                        </div>
                        <div id="advanced-options" />
                        <div id="folderlist" />
                    </div>
                </div>
            </div>
        </div>
    </body>
    <script src="dashboard.js"></script>
    <script src="dashboard-sort.js"></script>
</html>
